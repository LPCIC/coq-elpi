     EV.Interp.accumulate_db ~atts  (snd d) }
| #[ atts = any_attribute ] [ "Elpi" "Accumulate" qualified_name(p) "Db" qualified_name(d) ] SYNTERP AS atts { 
     let atts = validate_attributes skip_and_synterp_attributes atts in
