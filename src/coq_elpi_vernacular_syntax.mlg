| #[ atts = any_attribute ] [ "Elpi" "Accumulate" "Db" qualified_name(d) ] SYNTERP AS atts {
     let atts = validate_attributes skip_and_synterp_attributes atts in
     EV.Synterp.accumulate_db ~atts  (snd d);
