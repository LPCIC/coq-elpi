(coq.theory
 (name elpi_elpi) ; FIXME
 (package coq-elpi))

(rule
 (target dummy.v)
 (deps
  (glob_files *.elpi))
 (action
  (with-stdout-to %{target}
   (progn
     (echo "Require Import String.\nOpen Scope string_scope.\nLocal Definition _hash := \"\n")
     (run coq_elpi_shafile %{deps})
     (echo "\".\n")))))

(install
 (files
  (glob_files (*.elpi with_prefix coq/user-contrib/elpi_elpi/)))
 (section lib_root)
 (package coq-elpi))
